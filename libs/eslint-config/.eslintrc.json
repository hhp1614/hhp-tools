{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "vue-eslint-parser", // 解析 vue
  "parserOptions": {
    "parser": "@typescript-eslint/parser", // 解析 ts
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended", // eslint 默认
    "plugin:vue/recommended", // vue
    "plugin:prettier/recommended", // prettier
    "prettier",
    "plugin:@typescript-eslint/recommended" // ts
  ],
  "rules": {
    "@typescript-eslint/explicit-module-boundary-types": "off", // 每一个函数都要显式的表明函数返回值
    "@typescript-eslint/no-non-null-assertion": "off" // 禁止非null断言
  }
}
